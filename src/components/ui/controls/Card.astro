---
import { Image } from "astro:assets";
import IconStore  from  '../../../assets/icon-store.svg'
import IconDesktop from  '../../../assets/icon-desktop.svg'
import IconDevices from  '../../../assets/icon-devices.svg'
import IconWeb from  '../../../assets/icon-web.svg'


const { item } = Astro.props;


// Mapeo de iconos
const icons = {
  store: IconStore,
  desktop: IconDesktop,
  devices: IconDevices,
  web: IconWeb
};

const iconSrc = icons[item.icon];
---

<article class="w-full rounded max-w-lg p-4 m-4 hover:scale-95 transition-all">
  <div class="inline-flex gap-4">
    
     {iconSrc && <Image src={iconSrc} alt={item.title} width={24} height={24} />}
    <span class="text-lg font-semibold">{item.title}</span>
  </div>
  <p class="text-balance">{item.description}</p>
</article>