---
interface Props {
	title: string;
}

const { title } = Astro.props;
import  '../styles/base.css'
import Header from '../components/ui/Header.astro'
import SideBar from '../components/ui/SideBar.astro';
import { ViewTransitions } from 'astro:transitions';
import NavMenu from '../components/ui/NavMenu.astro';

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="md:w-10/12 w-full min-h-screen flex flex-wrap justify-center items-center mx-auto bg-[url('/bg2.avif')] lg:bg-no-repeat object-contain ">
		<Header/>
		<main class="w-full flex flex-wrap justify-between items-start shadow-md shadow-slate-500 bg-white/35">		
			<NavMenu />
			<section class="w-3/12  max-lg:w-full">
				<SideBar />
			</section>
			<section class="bg-white w-9/12 max-lg:w-full">
				<slot name="content" />
			</section>
		</main>
	</body>
</html>

